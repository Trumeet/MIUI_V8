<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@drawable/alert_dialog_bg"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:gravity="center"
		android:id="@+id/custom_miui_dialog_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		style="@style/DialogTitle"/>

	<LinearLayout
		android:layout_marginTop="20dp"
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<FrameLayout
			android:id="@+id/custom_miui_dialog_view"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<View
			android:gravity="center"
			android:orientation="horizontal"
			android:id="@+id/v1"
			android:background="#F2B6B6B6"
			android:layout_width="match_parent"
			android:layout_height="0.4dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:id="@+id/custom_miui_dialog_button">

		<Button
			android:gravity="center"
			android:id="@+id/neutral_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="?android:attr/borderlessButtonStyle"/>

		<View
			android:background="#F2B6B6B6"
			android:layout_width="0.3dip"
			android:id="@+id/neutral_view"
			android:layout_height="fill_parent"/>

		<Button
			android:gravity="center"
			android:id="@+id/negative_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="?android:attr/borderlessButtonStyle"/>

		<View
			android:background="#F2B6B6B6"
			android:layout_width="0.3dip"
			android:id="@+id/positive_view"
			android:layout_height="fill_parent"/>

		<Button
			android:gravity="center"
			android:id="@+id/positive_button"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="?android:attr/borderlessButtonStyle"/>

	</LinearLayout>

</LinearLayout>

